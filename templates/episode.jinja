{# ========================================================= #}
{# Episode Template                                          #}
{# mode = "script" → renderar färdigt manus (txt)            #}
{# mode = "used"   → skriver bara section_id per rad         #}
{# ========================================================= #}

{% set safe_lang = lang if lang in ["en", "fr", "sw"] else "en" %}
{% set pretty_league = league.replace("_", " ").title() %}

{# Metadata för titlar/beskrivningar per veckodag #}
{% if weekday == 0 %}
  {% set episode_title = pretty_league + " Post-Match – " + date %}
  {% set episode_description = "Weekend roundup of the " + pretty_league + ", with all the top news stories." %}
{% elif weekday == 1 %}
  {% set episode_title = pretty_league + " Daily Recap – " + date %}
  {% set episode_description = "Daily " + pretty_league + " recap, top 3 news, and key African player stats." %}
{% elif weekday == 3 %}
  {% set episode_title = pretty_league + " Daily Highlights – " + date %}
  {% set episode_description = "Highlights and expert opinions from the " + pretty_league + "." %}
{% else %}
  {% set episode_title = pretty_league + " Daily – " + date %}
  {% set episode_description = "Daily recap of the " + pretty_league + "." %}
{% endif %}

{% if mode == "used" %}
  {# ------------------------------------------------------- #}
  {# Måndag: Post-Match intro + alla NEWS                    #}
  {# ------------------------------------------------------- #}
  {% if weekday == 0 %}
S.GENERIC.INTRO_POSTMATCH
    {% for sid, sec in sections.items() if sid.startswith("S.NEWS.") %}
{{ sid }}
    {% endfor %}
  {# ------------------------------------------------------- #}
  {# Tisdag: Daily intro + Top3 + Stats                      #}
  {# ------------------------------------------------------- #}
  {% elif weekday == 1 %}
S.GENERIC.INTRO_DAILY
S.NEWS.TOP3
S.STATS.TOP_AFRICAN_PLAYERS
  {# ------------------------------------------------------- #}
  {# Torsdag: Daily intro + Highlight + Expert               #}
  {# ------------------------------------------------------- #}
  {% elif weekday == 3 %}
S.GENERIC.INTRO_DAILY
S.NEWS.HIGHLIGHT
S.OPINION.EXPERT_COMMENT
  {% else %}
S.GENERIC.INTRO_DAILY
S.NEWS.TOP3
  {% endif %}
{% endif %}
